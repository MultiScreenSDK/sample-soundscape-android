<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/user_color_1</item>
        <item name="android:textColor">@color/default_btn</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:buttonBarButtonStyle">@style/DefaultButtonStyle</item>
        <!-- See caveat -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/connect_width</item>
    </style>
</resources>