<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/connect_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="0dp" >

    <!--<RelativeLayout-->
        <!--android:id="@+id/backgroundLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:alpha="1"-->
        <!--android:background="@color/white" />-->

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/connectedToLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/connectedToHeader"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#212121"
                android:fontFamily="@string/font_fontFamily_medium"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/connectedToIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_discovered_white" />

                <TextView
                    android:id="@+id/connectedToText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="@string/connect_to"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectedServiceLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212121"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/connectedToDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#757575" />

            <LinearLayout
                android:id="@+id/selectedServiceHeader"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/selectedServiceIcon"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_speaker_white" />

                <TextView
                    android:id="@+id/selectedServiceText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:text="Shape"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <com.andexert.library.RippleView
                android:id="@+id/buttonRipple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="0dp"
                app:rv_color="@color/gray">

                <Button
                    android:id="@+id/disconnectButton"
                    style="@style/DefaultButtonStyle"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:stateListAnimator="@anim/button_elevation"
                    android:text="Disconnect" />
            </com.andexert.library.RippleView>

            <LinearLayout
                android:id="@+id/switchToLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#eeeeee"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/switchToHeader"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/switchToIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_discovered_gray" />

                    <TextView
                        android:id="@+id/switchToText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="@string/switch_to"
                        android:textColor="#212121"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:id="@+id/switchToDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#424242" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/deviceListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:divider="#bdbdbd"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="true"
            tools:listitem="@layout/service_list_item"/>
    </LinearLayout>

</RelativeLayout>
